@model Purchaseproweb.Entities.Systemassets
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">System Asset Data</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <input class="form-control form-control-sm" asp-for="Assetid" id="Systemassetid" hidden />
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label class="font-weight-light">Asset Name</label>
                <input class="form-control form-control-sm" asp-for="Assetname" id="Systemassetnameid" />
            </div>
        </div>

    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="Savesystemassetdetails();">Add</button>
</div>