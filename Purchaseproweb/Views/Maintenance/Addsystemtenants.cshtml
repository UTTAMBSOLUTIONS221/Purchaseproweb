@model Purchaseproweb.Entities.Systemtenants
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">Tenant Data</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <input class="form-control form-control-sm" asp-for="Tenantid" id="Systemtenantid" hidden />
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label class="font-weight-light">Tenant Name</label>
                <input class="form-control form-control-sm" asp-for="Tenantname" id="Systemtenantnameid" />
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Email Server</label>
                <input class="form-control form-control-sm" asp-for="Emailserver" id="Systememailserverid" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Email Password</label>
                <input class="form-control form-control-sm" asp-for="Emailpassword" id="Systememailpasswordid" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Mpesa Short Code</label>
                <input class="form-control form-control-sm" asp-for="Shortcode" id="Systemmpesashortcodeid" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Consumer Key</label>
                <input class="form-control form-control-sm" asp-for="Consumerkey" id="Systemmpesaconsumerkeyid" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Consumer Secret</label>
                <input class="form-control form-control-sm" asp-for="Consumersecret" id="Systemmpesaconsumersecretid" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Lipan na Mpesa Pass Key</label>
                <input class="form-control form-control-sm" asp-for="Tenantlipanampesapasskey" id="Systemtenantlipanampesapasskeyid" />
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="Savesystemtenantdetails();">Add</button>
</div>