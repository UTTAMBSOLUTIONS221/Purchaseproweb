@model  Purchaseproweb.Entities.Systemuserroledetail
@{
    var Systempermission = ViewData["Systempermissionlists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">Staff Role</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
           <input class="form-control form-control-sm" asp-for="RoleId" id="RoleIdValueId" hidden />
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Role Name</label>
                <input class="form-control form-control-sm" asp-for="Rolename" id="RolenameId" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Description</label>
                <input class="form-control form-control-sm" asp-for="Roledescription" id="DescriptionId" />
            </div>
        </div>
    </div>
    <h6 class="card-title text-sm">Permissions</h6>
    <br />
    <div class="row">
        @for (int i = 0; i < Systempermission.Count; i++)
        {
            if (i > 0 && i % 4 == 0)
            {
                @:</div><div class="row">
            }
            <div class="col-sm-6 ">
               <label class="font-weight-lighter text-xs"><input type="checkbox" id="permissions" class="isCheckbox" value="@Systempermission[i].Value"/><span class="font-weight-lighter text-xs ml-1">@Systempermission[i].Text</span></label>
            </div>
        }
</div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="Savesystemrolesdetails();">Add</button>
</div>