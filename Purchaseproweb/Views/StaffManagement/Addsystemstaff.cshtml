@model Purchaseproweb.Entities.Systemstaffs
@{
    var SystemStaffRoles = ViewData["Systemroleslists"] as List<SelectListItem>;
    var Systemphonecode = ViewData["Systemphonecodelists"] as List<SelectListItem>;
}
<div class="modal-header">
    <h5 class="text-sm modal-title" id="SocialPesaModalLabel">Staff Data</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        <input class="form-control form-control-sm" asp-for="Staffid" id="SystemstaffId" hidden />
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">First Name</label>
                <input class="form-control form-control-sm" asp-for="Firstname" id="SystemstafffirstnameId" />
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Last Name</label>
                <input class="form-control form-control-sm" asp-for="Lastname" id="SystemstafflastnameId" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-group">
                <label class="font-weight-light">Email Address</label>
                <input class="form-control form-control-sm" type="email" asp-for="Emailaddress" id="SystemstaffemailaddressId" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Role</label>
                <select class="form-control form-control-sm font-weight-light" id="SystemstaffroleId" asp-for="Roleid" asp-items="@SystemStaffRoles">
                    <option value="0">--Select Role ---</option>
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label class="font-weight-light">Phone Number</label>
                <div class="input-group input-group-sm mb-3">
                    <div class="input-group-prepend">
                        <select class="form-control form-control-sm font-weight-light input-group-text" id="inputGroup-sizing-sm" asp-for="Phoneid" asp-items="@Systemphonecode">
                            <option value="0">Phonecode</option>
                        </select>
                    </div>
                    <input type="number" class="form-control form-control-sm" aria-label="Small" id="SystemstaffphonenumberId" asp-for="Phonenumber" aria-describedby="inputGroup-sizing-sm">
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Close</button>
    <button class="btn btn-sm btn-info font-weight-bold" type="button" onclick="Savesystemstaffdetails();">Add</button>
</div>