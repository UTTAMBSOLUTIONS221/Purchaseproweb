@model IEnumerable<Purchaseproweb.Models.SystemStaffModel>
@{
    ViewData["Title"] = "System staffs list";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card card-outline card-info">
            <div class="card-header py-1">
                <div class="row">
                    <div class="col-sm-8">
                        <h6 class="font-weight-bold text-sm card-title">Staffs</h6>
                    </div>
                    <div class="col-sm-4">
                        <a asp-action="Addsystemstaff" asp-controller="StaffManagement" asp-route-Tenantstaffid="0" asp-area="" class="btn-info btn-xs btn-outline-info text-white float-right text-uppercase" data-target="#DukawaremallsystemModal" data-toggle="modal" data-backdrop="static" data-keyboard="false">Add Staff</a>
                    </div>
                </div>
            </div>
            <div class="card-body table-responsive table-responsive-sm">
                <table class="table table-bordered table-striped compact table-sm table-responsive-sm nowrap text-nowrap" id="AllsystemDataTables">
                    <thead>
                        <tr>
                            <th>Staffname</th>
                            <th>Emailaddress</th>
                            <th>Phonenumber</th>
                            <th>Rolename</th>
                            <th>Datecreated</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Staffname</td>
                                <td>@item.Emailaddress</td>
                                <td>@item.Phonenumber</td>
                                <td>@item.RoleName</td>
                                <td>@item.Datecreated</td>
                                <td>
                                    <a asp-action="Addsystemstaff" asp-controller="StaffManagement" asp-route-Tenantstaffid="@item.Staffid" asp-route-code="@Guid.NewGuid" asp-area="" class="btn-info btn-xs btn-outline-info text-white text-uppercase" data-target="#DukawaremallsystemModal" data-toggle="modal" data-backdrop="static" data-keyboard="false">Edit</a>
                                    <a asp-action="Resendstaffpassword" asp-controller="StaffManagement" asp-route-Tenantstaffid="@item.Staffid" asp-route-code="@Guid.NewGuid" asp-area="" class="btn-info btn-xs btn-outline-info text-white text-uppercase">Resend Password</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>